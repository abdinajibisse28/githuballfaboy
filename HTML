  <title>Tic-Tac-Toe Responsive</title>
  <style>
    :root{
      --bg1: #1a2a6c;
      --bg2: #b21f1f;
      --bg3: #fdbb2d;
      --surface: rgba(255,255,255,0.05);
      --text: #f0f0f0;
      --accent-x: #4ee7ff;
      --accent-o: #ff8fcf;
      --win: #4de38a;
    }

    *{box-sizing:border-box;}
    body{
      margin:0;
      min-height:100vh;
      display:flex;
      align-items:center;
      justify-content:center;
      font-family:system-ui, sans-serif;
      background: linear-gradient(135deg, var(--bg1), var(--bg2), var(--bg3));
      color:var(--text);
    }

    .game{
      width:min(94vw, 480px);
      display:grid;
      gap:16px;
    }

    h1{ text-align:center; margin:0 0 12px; }

    .grid{
      display:grid;
      grid-template-columns:repeat(3,1fr);
      gap:10px;
    }
    .cell{
      width:100%;
      aspect-ratio:1/1;
      border-radius:12px;
      background:var(--surface);
      border:1px solid rgba(255,255,255,0.2);
      font-size:clamp(32px,14vw,64px);
      font-weight:800;
      color:var(--text);
      display:grid;
      place-items:center;
      cursor:pointer;
      transition:transform .1s ease;
    }
    .cell:hover{ transform:scale(1.04); }
    .cell.x{ color:var(--accent-x); }
    .cell.o{ color:var(--accent-o); }
    .cell.win{ color:var(--win); }

    .info{ text-align:center; font-size:1.1rem; }

    /* Overlay screen for win/draw */
    .overlay{
      position:fixed;
      inset:0;
      background:rgba(0,0,0,0.8);
      display:flex;
      align-items:center;
      justify-content:center;
      flex-direction:column;
      gap:20px;
      font-size:1.5rem;
      visibility:hidden;
      opacity:0;
      transition:opacity .3s ease;
      z-index:10;
    }
    .overlay.show{
      visibility:visible;
      opacity:1;
    }
    .overlay button{
      padding:.6em 1.2em;
      font-size:1rem;
